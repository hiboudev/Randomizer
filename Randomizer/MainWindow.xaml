<Window x:Class="Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Randomizer"
        mc:Ignorable="d"
        Title="Randomizer" Height="250" Width="250" Background="#444444"
        WindowStyle="None"
        >
    <Grid>
        <Viewbox>
            <TextBlock Name="textField" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
            <Viewbox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Keep on top" Name="menuItemKeepOnTop" IsCheckable="True"/>
                </ContextMenu>
            </Viewbox.ContextMenu>
        </Viewbox>
    </Grid>
</Window>
